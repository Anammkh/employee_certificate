<odoo>
  <template id="report_certificate_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="employee">
        <div class="page">
          <h2>Certificates for <t t-esc="employee.name"/></h2>
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Name</th>
                <th>Number</th>
                <th>Date Issued</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="employee.certificate_ids" t-as="cert">
                <tr>
                  <td><t t-esc="cert.name"/></td>
                  <td><t t-esc="cert.certificate_number"/></td>
                  <td><t t-esc="cert.date_issued"/></td>
                </tr>
              </t>
            </tbody>
          </table>
        </div>
      </t>
    </t>
  </template>
</odoo>

