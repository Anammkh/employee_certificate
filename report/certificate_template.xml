<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="certificate_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="doc">
        <div class="page">
          <h2 style="text-align: center;">Certificate of Employment</h2>
          <p>This certifies that <strong><t t-esc="doc.name"/></strong></p>
          <p>Has received a certificate for <strong><t t-esc="doc.certificate_name"/></strong></p>
          <p>Date: <span><t t-esc="doc.date_received"/></span></p>
        </div>
      </t>
    </t>
  </template>
</odoo>

