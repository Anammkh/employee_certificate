<odoo>
  <record id="view_employee_form_inherit_cert" model="ir.ui.view">
    <field name="name">hr.employee.form.inherit.cert</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form/sheet/notebook" position="inside">
        <page string="Certificates">
          <field name="certificate_ids" mode="tree,form" context="{'default_employee_id': active_id}">
            <tree editable="bottom">
              <field name="name"/>
              <field name="certificate_number"/>
              <field name="date_issued"/>
            </tree>
          </field>
          <button name="print_certificate_report" type="object" string="Print Certificate PDF" class="btn-primary"/>
        </page>
      </xpath>
    </field>
  </record>
</odoo>

